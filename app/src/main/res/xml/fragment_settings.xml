<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/filters_search_title">

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/request_region_entries"
            app:entryValues="@array/request_region_selector_entryValues"
            app:icon="@drawable/ic_request_region"
            app:key="filters_request_region"
            app:title="@string/filters_request_region"
            app:useSimpleSummaryProvider="true" />

        <CheckBoxPreference
            app:defaultValue="false"
            app:icon="@drawable/ic_search"
            app:key="filters_deep_search"
            app:summary="@string/filters_deep_search_summary"
            app:title="@string/filters_deep_search" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/filters_app_title">

        <EditTextPreference
            app:defaultValue="@string/filters_request_zepp_app_version_value"
            app:icon="@drawable/ic_app_zepp"
            app:key="filters_zepp_app_version"
            app:title="@string/filters_request_zepp_app_version"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="@string/filters_request_zepp_life_app_version_value"
            app:icon="@drawable/ic_app_zepp_life"
            app:key="filters_zepp_life_app_version"
            app:title="@string/filters_request_zepp_life_app_version"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:icon="@drawable/ic_update"
            app:key="filters_app_version_load_defaults"
            app:title="@string/filters_app_version_load_defaults" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_about_title">

        <Preference
            app:icon="@mipmap/ic_launcher"
            app:key="settings_credentials"
            app:summary="@string/settings_about_summary"
            app:title="@string/app_name" />

        <SwitchPreference
            app:defaultValue="true"
            app:icon="@drawable/ic_update"
            app:key="settings_app_check_updates"
            app:title="@string/settings_app_check_for_updates" />

    </PreferenceCategory>

</PreferenceScreen>