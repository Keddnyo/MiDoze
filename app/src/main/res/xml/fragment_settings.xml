<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:asp="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/filters_host_and_region_title">

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/request_host_entries"
            app:entryValues="@array/request_host_selector_entryValues"
            app:icon="@drawable/ic_request_host"
            app:key="filters_request_host"
            app:title="@string/filters_request_host"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/request_region_entries"
            app:entryValues="@array/request_region_selector_entryValues"
            app:icon="@drawable/ic_request_region"
            app:key="filters_request_region"
            app:title="@string/filters_request_region"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/filters_app_title">

        <ListPreference
            app:allowDividerBelow="true"
            app:defaultValue="Zepp"
            app:entries="@array/request_app_name_entries"
            app:entryValues="@array/request_app_name_entryValues"
            app:icon="@drawable/ic_pretend_app"
            app:key="filters_app_name"
            app:title="@string/filters_request_app_name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="@string/filters_request_zepp_app_version_value"
            app:icon="@drawable/ic_app_zepp"
            app:key="filters_zepp_app_version"
            app:title="@string/filters_request_zepp_app_version"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="@string/filters_request_zepp_life_app_version_value"
            app:icon="@drawable/ic_app_zepp_life"
            app:key="filters_zepp_life_app_version"
            app:title="@string/filters_request_zepp_life_app_version"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:icon="@drawable/ic_update"
            app:key="filters_app_version_load_defaults"
            app:title="@string/filters_app_version_load_defaults" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/filters_advanced_title">

        <SeekBarPreference
            asp:max="350"
            app:defaultValue="95"
            app:icon="@drawable/ic_range"
            app:key="filters_feed_deviceSource_range"
            app:min="30"
            app:showSeekBarValue="true"
            app:title="@string/filters_request_deviceSource_span" />

        <SeekBarPreference
            asp:max="270"
            app:defaultValue="257"
            app:icon="@drawable/ic_range"
            app:key="filters_feed_productionSource_range"
            app:min="256"
            app:showSeekBarValue="true"
            app:title="@string/filters_request_productionSource_span" />

        <SwitchPreference
            app:defaultValue="false"
            app:icon="@drawable/ic_unknown"
            app:key="filters_show_unknown_devices"
            app:title="@string/filters_show_unknown_devices" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_about_title">

        <Preference
            app:icon="@mipmap/ic_launcher"
            app:key="settings_credentials"
            app:summary="@string/settings_about_summary"
            app:title="@string/app_name" />

        <SwitchPreference
            app:defaultValue="true"
            app:icon="@drawable/ic_update"
            app:key="settings_app_check_updates"
            app:title="@string/settings_app_check_for_updates" />

    </PreferenceCategory>

</PreferenceScreen>