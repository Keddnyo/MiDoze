<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_server_interaction">

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/request_region_entries"
            app:entryValues="@array/request_region_selector_entryValues"
            app:icon="@drawable/ic_custom_request"
            app:key="settings_request_region"
            app:title="@string/settings_request_region"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_dashboard">

        <Preference
            app:icon="@drawable/ic_favorite"
            app:key="settings_favorites"
            app:title="@string/favorites" />

        <Preference
            app:icon="@drawable/ic_download"
            app:key="settings_downloads"
            app:title="@string/settings_downloads" />

        <Preference
            app:icon="@drawable/ic_share"
            app:key="settings_shares"
            app:title="@string/settings_shares" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_about">

        <Preference
            app:icon="@drawable/ic_info"
            app:key="settings_app_info"
            app:summary="@string/settings_keddnyo"
            app:title="@string/app_name" />

        <Preference
            app:icon="@drawable/ic_cloud"
            app:key="settings_server_info"
            app:summary="@string/settings_schakal"
            app:title="@string/settings_json_storage_title" />

        <Preference
            app:icon="@drawable/ic_info"
            app:key="settings_app_github_page"
            app:summary="@string/settings_app_github_page_summary"
            app:title="@string/settings_app_github_page" />

    </PreferenceCategory>

</PreferenceScreen>