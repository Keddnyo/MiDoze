<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/profile_dashboard">

        <Preference
            app:icon="@drawable/ic_favorite_border"
            app:key="extras_favorites"
            app:title="@string/favorites_title" />

        <Preference
            app:icon="@drawable/ic_download"
            app:key="extras_downloads"
            app:title="@string/profile_downloads" />

        <Preference
