<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:id="@+id/extrasDeviceSourceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/extras_device_source"
        android:inputType="number"
        android:maxLength="3"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/extrasProductionSourceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/extras_production_source"
        android:inputType="number"
        android:maxLength="3"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/extrasAppNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/extras_app_name"
        android:inputType="text"
        android:maxLength="20"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/extrasAppVersionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/extras_app_version"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="17"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/extrasSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/ok" />

    <Button
        android:id="@+id/extrasImportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extras_import_button"
        android:visibility="gone" />

</LinearLayout>