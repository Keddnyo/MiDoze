<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MiDoze" parent="Theme.Material3.Light">
        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Theme.Dialog.Firmware" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">#00000000</item>
    </style>

    <style name="Watchface" parent="Theme.Material3.Dark">
        <item name="android:windowBackground">#66FFFFFF</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackgroundBlurRadius" tools:targetApi="s">10dp</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
    </style>

</resources>