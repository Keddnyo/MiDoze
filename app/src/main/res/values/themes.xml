<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MiDoze" parent="Theme.Material3.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/storopia</item>
        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorOnPrimary">@color/accent_dark</item>
        <item name="colorPrimaryContainer">@color/accent_light</item>
        <item name="colorOnPrimaryContainer">@color/accent_light</item>
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorOnSecondary">@color/accent_dark</item>
        <item name="colorSecondaryContainer">@color/accent_dark</item>
        <item name="colorOnSecondaryContainer">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/background_light</item>

        <item name="android:statusBarColor" tools:targetApi="m">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
    </style>

    <style name="Theme.Dialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/storopia</item>
        <item name="dialogCornerRadius">@dimen/corner_radius</item>

        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorOnPrimary">@color/accent_dark</item>
        <item name="colorPrimaryContainer">@color/accent_light</item>
        <item name="colorOnPrimaryContainer">@color/accent_light</item>
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorOnSecondary">@color/accent_dark</item>
        <item name="colorSecondaryContainer">@color/accent_dark</item>
        <item name="colorOnSecondaryContainer">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/background_light</item>
    </style>

    <style name="Theme.Dialog.Firmware" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/storopia</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">#00000000</item>

        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorOnPrimary">@color/accent_dark</item>
        <item name="colorPrimaryContainer">@color/accent_light</item>
        <item name="colorOnPrimaryContainer">@color/accent_light</item>
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorOnSecondary">@color/accent_dark</item>
        <item name="colorSecondaryContainer">@color/accent_dark</item>
        <item name="colorOnSecondaryContainer">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/background_light</item>
    </style>

    <style name="Button" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/storopia</item>
        <item name="colorPrimary">@color/accent_light</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>